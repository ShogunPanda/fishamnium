{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": ".",
    "alwaysStrict": false,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2017"],
    "baseUrl": ".",
    "paths": {
      "argsplit": ["src/typings/argsplit"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": []
}